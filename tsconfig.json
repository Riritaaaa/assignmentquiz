{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,


      //path
      "baseUrl": "./src", 
      "paths": {
        "@pages/*": ["pages/*"],
        "@components/*": ["components/*"],
        "@assets/*": ["assets/*"],
        "@styleui/*": ["styleui/*"],
        "@tailwindworkshop/*": ["tailwindworkshop/*"],
        "@antframework/*": ["antframework/*"],
        "@globalredux/*": ["globalredux/*"],
        "@store/*": ["store/*"],
        "@apicourse/*": ["apicourse/*"],
        "@routes/*": ["routes/*"],
        "@pokemon/*": ["pokemon/*"],
        "@service/*": ["service/*"],
        "@workshoppokemon/*": ["workshoppokemon/*"],
        "@quiz/*": ["quiz/*"],
      },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
